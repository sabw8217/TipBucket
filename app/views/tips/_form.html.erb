<%= form_for(@tip) do |f| %>
    <div class="row-fluid">
        <div class="span6"><h1>The Incident</h1></div>
    </div>
    <div class="row-fluid">
        <div class="span2"><%= f.label :location, "Where", :class => 'tlabel' %></div>
        <div class="span4"><%= f.text_field :location %><button id="get_location">Use my current location</button></div>
    </div>
    <div class="row-fluid">
      <div class="span2"><%= f.label :has_occurred, "When", :class => 'tlabel' %></div>
      <div class="span4"><div class="btn-group">
        <button class="btn">Has occurred</button>
        <button class="btn">Not yet</button>
      </div></div>
    </div>
    <div class="row-fluid">
      <div class="span4 offset2">
        <%= f.datetime_local_field :occurred_at_local, :step => 1 %>
      </div>
    </div>
<% if false %>
        <div class="span2">
            <%= f.label :has_occurred, "When", :class => 'tlabel' %>
        </div>
        <div class="span4">
            <select>
                <option default=true>Select a time</option>
                <option>1 PM</option>
                <option>2 PM</option>
                <option>3 PM</option>
                <option>4 PM</option>
                <option>5 PM</option>
                <option>6 PM</option>
                <option>7 PM</option>
                <option>8 PM</option>
                <option>9 PM</option>
                <option>10 PM</option>
                <option>11 PM</option>
                <option>12 PM</option>
                <option>1 AM</option>
                <option>2 AM</option>
                <option>3 AM</option>
                <option>4 AM</option>
                <option>5 AM</option>
                <option>6 AM</option>
                <option>7 AM</option>
                <option>8 AM</option>
                <option>9 AM</option>
                <option>10 AM</option>
                <option>11 AM</option>
                <option>12 AM</option>
            </select>
        </div>
        <div class="span2">
            <%= f.check_box :has_occurred, :class => 'tlabel' %><%= f.label :has_occurred, "Not Yet", :class => 'tlabel' %>
        </div>
 <% end %>
    <div class="row-fluid">
        <div class="span2">
            <%= f.label :crime_type, "What", :class => 'tlabel' %>
        </div>
        <div class="span4">
            <select>
                <option default=true>Select a crime type</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span4">
            <h1>The Perpetrator</h1>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span2">
            <%= f.label "Gender", :class => 'tlabel' %>
        </div>
        <div class=span4>
            <div id="get_gender" class="btn-group" data-toggle="buttons-radio">
                <button type="button" class="btn btn-primary">Male</button>
                <button type="button" class="btn btn-primary">Female</button>
                <button type="button" class="btn btn-primary">Unknown</button>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span2">
            <%= f.label :race, "Race", :class => 'tlabel' %>
        </div>
        <div class="span4">
            <select>
                <option default=true>Select a race</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span2">
            <%= f.label :height, "Height", :class => 'tlabel' %>
        </div>
        <div class="span4">
            <div class="btn-group">
                <button class="btn">Short</button>
                <button class="btn">Average</button>
                <button class="btn">Tall</button>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span2">
            <%= f.label :haircolor, "Hair Color", :class => 'tlabel' %>
        </div>
        <div class="span4">
            <div class="btn-group">
                <button class="btn">Black</button>
                <button class="btn">Brown</button>
                <button class="btn">Blonde</button>
                <button class="btn">Other</button>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span2">
            <%= f.label :description, "Details", :class => 'tlabel' %>
        </div>
        <div class="span4">
            <span>Please share additional details:</span><%= f.text_area :description %>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span2">
            <%= f.label :phone, "Ph #", :class => 'tlabel' %>
        </div>
        <div class="span4">
            <%= f.text_field :phone, :class => 'tlabel' %>
        </div>
        <div class="span4">
            <span>(optional)</span>
        </div>
    </div>
    <% if @tip.errors.any? %>
    <div id="error_explanation">
    <h2><%= pluralize(@tip.errors.count, "error") %> prohibited this tip from being saved:</h2>

    <ul>
    <% @tip.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
    <% end %>

  <%= f.hidden_field :lat %>
  <%= f.hidden_field :long %>
  <%= f.hidden_field :geocoded %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
