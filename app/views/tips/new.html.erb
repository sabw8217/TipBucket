<h1 style="text-align: center;">Leave a tip</h1>

<%= render :partial => "form" %>

<%= link_to 'Back', tips_path %>
<script type="text/javascript">
  $(document).ready(function() {
    $("#get_location").click(function() {
        getLocation();
        return false;
    });

    $("select").change(function() {
        $(this).find("option[default=true]").remove();
    });

    $(".btn").click(function() {
        return false;
    });

    $("#has_occurred_btn").click(function() {
        $("#has_occurred_btn").addClass("active");
        $("#not_yet_btn").removeClass("active");
        $("#tip_has_occurred").val(true);
    });

    $("#not_yet_btn").click(function() {
        $("#not_yet_btn").addClass("active");
        $("#has_occurred_btn").removeClass("active");
        $("#tip_has_occurred").val(false);
    });

    $("#gender_male_btn").click(function() {
        $("#gender_male_btn").addClass("active");
        $("#gender_female_btn").removeClass("active");
        $("#tip_gender").val("Male");
    });

    $("#gender_female_btn").click(function() {
        $("#gender_female_btn").addClass("active");
        $("#gender_male_btn").removeClass("active");
        $("#tip_gender").val("Female");
    });

    $("#height_short_btn").click(function() {
        $("#height_short_btn").addClass("active");
        $("#height_average_btn").removeClass("active");
        $("#height_tall_btn").removeClass("active");
        $("#tip_height").val("Short");
    });

      $("#height_average_btn").click(function() {
          $("#height_average_btn").addClass("active");
          $("#height_short_btn").removeClass("active");
          $("#height_tall_btn").removeClass("active");
          $("#tip_height").val("Average");
      });

      $("#height_tall_btn").click(function() {
          $("#height_tall_btn").addClass("active");
          $("#height_short_btn").removeClass("active");
          $("#height_average_btn").removeClass("active");
          $("#tip_height").val("Tall");
      });

      $("#haircolor_black_btn").click(function() {
          $("#haircolor_black_btn").addClass("active");
          $("#haircolor_brown_btn").removeClass("active");
          $("#haircolor_blonde_btn").removeClass("active");
          $("#haircolor_other_btn").removeClass("active");
          $("#tip_haircolor").val("Black");
      });

      $("#haircolor_brown_btn").click(function() {
          $("#haircolor_brown_btn").addClass("active");
          $("#haircolor_black_btn").removeClass("active");
          $("#haircolor_blonde_btn").removeClass("active");
          $("#haircolor_other_btn").removeClass("active");
          $("#tip_haircolor").val("Brown");
      });

      $("#haircolor_blonde_btn").click(function() {
          $("#haircolor_blonde_btn").addClass("active");
          $("#haircolor_black_btn").removeClass("active");
          $("#haircolor_brown_btn").removeClass("active");
          $("#haircolor_other_btn").removeClass("active");
          $("#tip_haircolor").val("Blonde");
      });

      $("#haircolor_other_btn").click(function() {
          $("#haircolor_other_btn").addClass("active");
          $("#haircolor_black_btn").removeClass("active");
          $("#haircolor_brown_btn").removeClass("active");
          $("#haircolor_blonde_btn").removeClass("active");
          $("#tip_haircolor").val("Other");
      });
  });

</script>